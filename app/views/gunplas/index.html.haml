= render 'shared/menu'

.col-sm-3.col-md-2.sidebar-nav
  -# TODO:内容未定
.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2
  .gunplasSection__appMain
    .gunplasHeader__title.h3 ガンプラ購入履歴
    %ul.gunpla-purchase-items
      - @gunplas.each do | gunpla |
        %li.gunpla-purchase-item-list
          .gunpla-purchase-item
            - if gunpla.image.present?
              = image_tag gunpla.image.to_s, class: 'img-thumbnail'
            - else
              = image_tag 'gunpla-no-image.jpg', class: 'img-thumbnail'
            %p= gunpla.name
            %p="購入価格:#{gunpla.price}円"
            %p=l gunpla.purchased_on, format: :long if gunpla.purchased_on?
            %p="メモ:#{gunpla.note}"

    = paginate @gunplas
