!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title GunplaBuild
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{ type: 'button', :'data-toggle' => "collapse", :'data-target' => "#secondary-navigation" }
            %span.sr-only
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: '/members/' }
            Gunpla Build
            %small
              Members
        #global-navigation.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li.edit_user_root_link
              TODO:ユーザー情報編集のリンク
            %li
              TOTO:sign_outのリンク
    #content
      .container-fluid
        = yield
      - if member_signed_in?
        %div
          Logged in as
          = succeed "." do
            %strong= current_member.email
          = link_to "ログアウト(members)", destroy_member_session_path, method: :delete
      - else
        %div
          = link_to "ログイン(members)", new_member_session_path

      - if notice
        %p.alert.alert-notice= notice
      - if alert
        %p.alert.alert-error= alert
