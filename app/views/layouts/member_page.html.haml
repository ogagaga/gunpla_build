!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title GunplaBuild
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %header
      %div
        - if member_signed_in?
          %div
            Logged in as
            = succeed "." do
              %strong= current_member.email
            = link_to "ログアウト(members)", destroy_member_session_path, method: :delete
        - else
          %div
            = link_to "ログイン(members)", new_member_session_path

    %div
      - if notice
        %p.alert.alert-notice= notice
      - if alert
        %p.alert.alert-error= alert
    = yield


