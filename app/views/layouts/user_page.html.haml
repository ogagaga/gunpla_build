!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title GunplaBuild
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body.member_page_body
    %nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{ type: 'button', :'data-toggle' => "collapse", :'data-target' => "#global-navigation" }
            %span.sr-only
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: '/admin/' }
            Gunpla Build
            %small
              Admin
        #global-navigation.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li.edit_user_registration_link
                = link_to 'ユーザー情報編集', edit_user_registration_path
            %li
              - if member_signed_in?
                = link_to destroy_user_session_path, method: :delete do
                  %span.label.label-danger ログアウト

    .container-fluid
      .row
        = yield
    = render 'shared/footer'
