.signin-form-area
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f|
    .signin-form-header
      %h1 Sign up to GunplaBuild
      = devise_error_messages!
    .signin-form-body
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: 'new-password', class: 'form-control'
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'
      .actions
        = button_tag 'Sign up', type: 'submit', class: 'btn btn-primary btn-block'
.other-link-area
  = render "members/shared/links"
